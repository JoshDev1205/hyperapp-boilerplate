{
  "include": [
    "src"
  ],
  "exclude": [
    "_templates",
    ".cache",
    "dist",
    "public",
    "node_modules"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "pretty": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es2015",
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node"
  }
}